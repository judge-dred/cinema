<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

<!-- Your servlet definitions go here -->
<servlet>
	<servlet-name>Main</servlet-name>
	<servlet-class>com.web.Main</servlet-class>
</servlet>

<servlet>
	<servlet-name>Register</servlet-name>
	<servlet-class>com.web.Register</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Main</servlet-name>
	<url-pattern>/*</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>Register</servlet-name>
	<url-pattern>/Register</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>UserList</servlet-name>
	<servlet-class>com.web.UserList</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>UserList</servlet-name>
	<url-pattern>/UserList</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>AddFilmshow</servlet-name>
	<servlet-class>com.web.AddFilmshow</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>AddFilmshow</servlet-name>
	<url-pattern>/AddFilmshow</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>AddFilm</servlet-name>
	<servlet-class>com.web.AddFilm</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>AddFilm</servlet-name>
	<url-pattern>/AddFilm</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>DeleteFilmshow</servlet-name>
	<servlet-class>com.web.DeleteFilmshow</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>DeleteFilmshow</servlet-name>
	<url-pattern>/DeleteFilmshow</url-pattern>
</servlet-mapping>

<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

<listener>
	<listener-class>com.web.SessionListener</listener-class>
</listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/beans.xml
        </param-value>
    </context-param>

